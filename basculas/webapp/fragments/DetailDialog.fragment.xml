<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">
    <Dialog
        title="Detalles del Producto: {detail>/ProductID}"
        contentWidth="500px">
        <content>
            <form:SimpleForm
                editable="false"
                layout="ResponsiveGridLayout">
                <form:content>
                    <Label text="Nombre del Producto"/>
                    <Text text="{detail>/ProductName}"/>
                    <Label text="Precio Unitario"/>
                    <Text text="{detail>/UnitPrice}"/>
                    <Label text="Unidades en Stock"/>
                    <Text text="{detail>/UnitsInStock}"/>
                    <Label text="ID de CategorÃ­a"/>
                    <Text text="{detail>/CategoryID}"/>
                    <Label text="Proveedor ID"/>
                    <Text text="{detail>/SupplierID}"/>
                </form:content>
            </form:SimpleForm>
        </content>
        <beginButton>
            <Button text="Cerrar" press="onCloseDialog"/>
        </beginButton>
    </Dialog>
</core:FragmentDefinition>